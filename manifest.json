{
    "name": "Philanthropist",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "Affiliated Amazon shopping made easy.",
    "icons": {
        "16": "assets/icon16.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "page_action": {
        "default_icon": "assets/icon19.png",
        "default_title": "Philanthropist"
    },
    "background": {
        "scripts": ["lib/vendor/URI.js/src/URI.js", 
                    "lib/background/session_manager.js", 
                    "lib/background/listener.js", 
                    "lib/background/main.js"]
    },
    "options_page": "lib/options/options.html",
    "permissions" : ["tabs", "cookies", "http://*.amazon.com/*"]
}
